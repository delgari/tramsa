<!DOCTYPE html>
<html lang="en">

<head>
    <title>Usuarios</title>
    <%- include ('../partials/head') %>
</head>

<body>
    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
        <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="../../Imagenes/Logo2.png" width="130" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Formulario -->
            <div class="container">
                <h2>Usuarios</h2>
                </br>
                <div class="form-row">
                    <div class="form-group col-md-10">
                        <input class="form-control" id="buscar" type="text" placeholder="Buscar..">
                    </div>
                    <div class="form-group">
                        <a type="button" href="/formUsuarios" class="btn btn-success"><i class="fas fa-plus"></i> Agregar nuevo</a>
                    </div>
                </div>
                <table id="tableUsuario" class="table table-light table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th style="display: none;">id</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Nombre corto</th>
                            <th>User</th>
                            <th>Correo electrónico</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="usuarios">
                        <%if (Resultado != ''){ %>
                        <% Resultado.forEach(function(row){ %>
                        <tr>
                            <td style="display: none;"><%= row._id %></td>
                            <td><%= row.codigoUsuario %></td>
                            <td><%= row.nombre %></td>
                            <td><%= row.nombreCorto %></td>
                            <td><%= row.user %></td>
                            <td><%= row.correo %></td>
                            <td><%= row.estado %></td>
                            <td>
                                <button class="btn"><i class="fas fa-trash" onclick="eliminar(this)"></i></button>
                                <button class="btn"><a href="/formUserModificar/<%= row._id %>"> <i class="fas fa-pencil-alt"></i></a></button>
                            </td>
                        </tr>
                        <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>

<script type="text/javascript">
    $(document).ready(function () {
        $("#buscar").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#usuarios tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function eliminar(objectPressed) {
        var objeto = objectPressed.parentNode.parentNode.parentNode;
        var numero = objeto.getElementsByTagName("td")[0].innerHTML;
        post("/usuarios", { _id: numero});
        document.getElementById("tableUsuario").deleteRow(objeto.rowIndex);
    }

    window.post = function (url, data) {
        const request = new Request(url, {
            method: 'POST',
            body: JSON.stringify(data),
            headers: new Headers({
                'Content-Type': 'application/json'
            })
        });
        return fetch(request);
    }
</script>