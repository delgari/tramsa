    xhr.open("POST",'/bodegas', true);
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.send(JSON.stringify({
        body: array_fila
    }));
	return array_fila;
    //console.log(numero+' '+codigo+' '+descripcion);
    */
    }

    window.post = function(url, data) {
        console.log(data);
