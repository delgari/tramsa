<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bodegas</title>
    <%- include ('../partials/head') %>
</head>

<body>
    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
         <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="../../Imagenes/Logo2.png" width="130" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Formulario -->
            <div class="container">
                <h2>Bodegas</h2>
                </br>
                <div class="form-row">
                    <div class="form-group col-md-10">
                        <input class="form-control" id="buscar" type="text" placeholder="Buscar..">
                    </div>
                    <div class="form-group">
                        <a type="button" href="/formBodegas" class="btn btn-success"><i class="fas fa-plus"></i> Agregar
                            nuevo</a>
                    </div>
                </div>
                <table class="table table-light table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Alias</th>
                            <th>Ubicación</th>
                            <th>Unidad de medida</th>
                            <th>Tipo</th>
                            <th>Espacio</th>
                            <th>Nombre corto</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="bodegas">
                        <%if (Resultado != ''){ %>
                        <% Resultado.forEach(function(row){ %>
                        <tr>
                            <td><%= row.codigoBodega %></td>
                            <td><%= row.nombre %></td>
                            <td><%= row.alias %></td>
                            <td><%= row.ubicacion %></td>
                            <td><%= row.unidadMedida %></td>
                            <td><%= row.tipoBodega %></td>
                            <td><%= row.espacioBodega %></td>
                            <td><%= row.nombreCorto %></td>
                            <td>
                                <button class="btn"><i class="fas fa-trash" onclick="getRowSelected(this)"></i></button>
                                <button class="btn"><i class="fas fa-pencil-alt"></i></button>
                            </td>
                        </tr>
                        <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</body>

</html>

<script type="text/javascript">
    $(document).ready(function () {
        $("#buscar").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#bodegas tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function getRowSelected(objectPressed) {
	//Obteniendo la linea que se esta eliminando
    var a=objectPressed.parentNode.parentNode.parentNode;
	//b=(fila).(obtener elementos de clase columna y traer la posicion 0).(obtener los elementos de tipo parrafo y traer la posicion0).(contenido en el nodo)
	var numero=a.getElementsByTagName("td")[0].innerHTML;
	var codigo=a.getElementsByTagName("td")[1].innerHTML;
	var descripcion=a.getElementsByTagName("td")[2].innerHTML;
	var cantidad=a.getElementsByTagName("td")[3].innerHTML;
	var precio=a.getElementsByTagName("td")[4].innerHTML;
	var subtotal=a.getElementsByTagName("td")[5].innerHTML;
	var impuesto=a.getElementsByTagName("td")[6].innerHTML;
	var total=a.getElementsByTagName("td")[7].innerHTML;

    var array_fila = [numero, codigo, descripcion, cantidad, precio, subtotal, impuesto, total];
    
    //ver como hacer un post

    //console.log(array_fila);
    post("/bodegas", {body: array_fila[1]});
