<!DOCTYPE html>
<html lang="en">

<head>
    <title>Productos</title>
    <%- include ('../../partials/head') %>
</head>

<body>

    <div class="wrapper">
        <%- include ('../../partials/navegacion') %>
        <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="../../../Imagenes/Logo2.png" width="130" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Formulario -->
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-md-7 col-lg-8 mx-auto">
                        <div class="card card-signin my-3">
                            <div class="card-body">
                                <h4 class="card-title text-center">Maestro</h4>
                                </br>
                                <script>
                                    var mensaje = '<%= Updated %>';
                                    if(mensaje != '')
                                      alert('<%= Updated %>');
                                </script>
                                <form method="post" action="/formProducMModificar/<%= Resultado._id %>" novalidate>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="descripcion">Descripción</label>
                                            <input type="text" class="form-control" id="descripcion" name="descipcion" value="<%= Resultado._descipcion %>">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="nombreCorto">Nombre Corto</label>
                                            <input type="text" class="form-control" id="nombreCorto" name="nombreCorto" value="<%= Resultado._nombreCorto %>">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="puntoReOrden">Punto de Re-orden</label>
                                            <input type="text" class="form-control" id="puntoReOrden"
                                                name="puntoReOrden" value="<%= Resultado._puntoReOrden%>">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="descripcion">Unidad de medida</label>
                                            <input type="text" class="form-control"
                                                placeholder="Metros, metros cúbicos, litros..." id="descripcion"
                                                name="unidadMedida" value="<%= Resultado._unidadMedida %>">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success"><i class="fas fa-check"></i>
                                        Modificar</button>
                                    <a class="btn btn-danger" href="/productosM"><i class="fas fa-times"></i>
                                        Salir</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>