<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte bodega</title>
    <%- include ('../partials/head') %>
</head>
<body>
    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
         <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="../../Imagenes/Logo2.png" width="130" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Formulario -->
            <div class="container" style="background-color: white;">
                <div id="printableArea">
                    <form>
                        <div class="row">
                            <div class="form-group col-md-4 " >
                                <label type="text" id="lbtBodega" style="color: black;"> <i class="fas fa-warehouse"></i> Bodega: </label> &nbsp
                                <input type="text" name="" id="txtBodega" placeholder="Bodega" onkeyup="filtrar()" >
                            </div>
                        </div>
    
                    </form>
                            <label > Fecha: </label>
                            <label id="demo"></label>
                            <label > Hora: </label>
                            <label id="demo2"></label>
                    <br>
                    <label type="text" id="lbtBodega" style="color: black;"> Para la bodega: </label> 
                    <table class="table table-striped table-light table-bordered table-hover table-responsive-sm" id="reporteProductoTable">
                       
                        <thead class="thead-dark">
                            <tr>
                                <th colspan="4">Reporte del inventario de la bodega</th>
                            </tr>
                            <tr>
                                <th>Fecha</th>
                                <th>Numero</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody id="bodegas">
                            <%if (Resultado != ''){ %>
                            <% Resultado.forEach(function(row){ %>
                            <tr>
                                <td><%= row.Fecha %></td>
                                <td><%= row.numProduccion %></td> 
                                <td><%= row.Producto %></td>
                                <td><%= row.Cantidad %></td>
                                <td style="display: none;"><%= row.Bodega %></td>
                            </tr>
                                <% })}else{ %>
                            <tr>
                                <td colspan="6">No Record Found</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
              </div>
              
              <input type="button" onclick="printDiv('printableArea')" value="Imprimir!" />
            </div>

        </div>

    </div>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $("#buscar").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#bodegas tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    function filtrar() {
    var input, filter, table, tr, td, i;
    input = document.getElementById("txtBodega");
    filter = input.value.toUpperCase();

    table = document.getElementById("reporteProductoTable");
    tr = table.getElementsByTagName("tr");
  
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td");
      if(td.length > 0){ 
         if (td[4].innerHTML.toUpperCase().indexOf(filter) > -1)
         {
            tr[i].style.display = "";
         } else {
           tr[i].style.display = "none";
         }
      }
   }
  }

    function printDiv(divName) {
     var printContents = document.getElementById(divName).innerHTML;
     var originalContents = document.body.innerHTML;

     document.body.innerHTML = printContents;

     window.print();

     document.body.innerHTML = originalContents;
    }

    var today  = new Date().toLocaleDateString();
    document.getElementById("demo").innerHTML = today;
    var hour  = new Date().toLocaleTimeString();
    document.getElementById("demo2").innerHTML = hour;
</script>