<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Producci√≥n en lote</title>
        <%- include ('../../partials/head') %>
    </head>
    
    <body>
        <div class="wrapper">
            <%- include ('../../partials/navegacion') %>
        <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="../../../Imagenes/Logo2.png" width="130" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Formulario -->
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-md-7 col-lg-8 mx-auto">
                        <div class="card card-signin my-3">
                            <div class="card-body">
                                <h4 class="card-title text-center">Modificar Punto Venta</h4>
                                </br>
                                <script>
                                    var mensaje = '<%= Updated %>';
                                    if (mensaje != '')
                                        alert('<%= Updated %>');
                                </script>
                                <form method="post" action="/formPuntoVentaModificar/<%= Resultado._id %>">
                                        <div class="form-row">
                                            <div class="form-group col-md-12">
                                                <input type="hidden" class="form-control" id="id" value="<%= Resultado._id %>" name="_id" required>
                                            </div>
                                        </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="numeroFactura">Numero Factura</label>
                                            <input type="text" class="form-control" id="numeroFactura"
                                            value="<%= Resultado.numeroFactura %>" name="numeroFactura" required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="fecha">Fecha </label>
                                            <input type="date" class="form-control" id="Fecha" value="<%= Resultado.fecha %>" name="Fecha" required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="producto">Producto</label>
                                            <input type="text" class="form-control" id="producto" value="<%= Resultado.producto %>" name="producto" required>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="cliente">Cliente</label>
                                            <input type="text" class="form-control" id="cliente" value="<%= Resultado.cliente %>" name="cliente" required>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="cantidadProducto">Cantidad Producto</label>
                                            <input type="text" class="form-control" value="<%= Resultado.cantidadProducto %>" id="cantidadProducto"
                                                name="cantidadProducto" required>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="descuento">Descuento</label>
                                            <input type="text" class="form-control" id="descuento" value="<%= Resultado.descuento %>" name="descuento" required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="impuesto">Impuesto</label>
                                            <input type="text" class="form-control" id="impuesto" value="<%= Resultado.impuesto %>" name="impuesto" required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="total">Total</label>
                                            <input type="text" class="form-control" id="total" value="<%= Resultado.total %>" name="total" required>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success"><i class="fas fa-check"></i>
                                        Modificar</button>
                                    <a class="btn btn-danger" href="/puntoVenta"><i class="fas fa-times"></i>
                                        Salir</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>