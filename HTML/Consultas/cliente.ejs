<!DOCTYPE html>
<html lang="en">

<head>
    <title>Cliente</title>
    <link rel="stylesheet" href="css/Consulta/consulta.css" type="text/css" media="all">
    <%- include ('../partials/head') %>
</head>

<body>

    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
        <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="Imagenes/Logo2.png" width="120" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Contenedor de la bitacora -->
            <div class="container">

                <h3>Clientes</h3>
                <br>
                <select name="" id="listaCliente">
                    <option value="0">
                        <--Selecciona una opción-->
                    </option>
                    <option value="1">Listado de clientes por estado </option>
                    <option value="1">Listado de clientes por estado </option>
                </select>
                <br>
                <br>
                <table class="table table-light table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Codigo cliente</th>
                            <th>Cedula</th>
                            <th>Nombre</th>
                            <th>Primer apellido</th>
                            <th>Segundo apellido</th>
                            <th>Estado</th>
                            <th>Telefono</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Nombre corto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if (Resultado != ''){ %>
                        <% Resultado.forEach(function(row){ %>
                        <tr>
                            <td><%= row.codigoCliente %></td>
                            <td><%= row.cedula %></td>
                            <td><%= row.nombre %></td>
                            <td><%= row.apellido1 %></td>
                            <td><%= row.apellido2 %></td>
                            <td><%= row.estado %></td>
                            <td><%= row.telefono %></td>
                            <td><%= row.correo %></td>
                            <td><%= row.direciion %></td>
                            <td><%= row.nombreCorto %></td>
                        </tr>
                        <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <div id="tableString"></div>
            </div>
        </div>
    </div>
</body>

</html>