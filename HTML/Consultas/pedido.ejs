<!DOCTYPE html>
<html lang="en">

<head>
    <title>Pedidos</title>
    <link rel="stylesheet" href="css/Consulta/consulta.css"  type="text/css" media="all">
    <%- include ('../partials/head') %>
</head>

<body>
    
    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
     <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="Imagenes/Logo2.png" width="120" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Contenedor de la bitacora -->
            <div class="container">
            <h3> <i class="fas fa-truck-loading"></i> Pedido pendientes</h3>
           
            <br>
            
               <table class="table table-striped table-light table-bordered table-hover table-responsive-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Orden de pedido</th>
                        <th>Fecha orden</th>
                        <th>Proveedor</th>
                        <th>Camion</th>
                        <th>Monto de pedido</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%if (Resultado != ''){ %>
                    <% Resultado.forEach(function(row){ %>
                    <tr>
                        <td><%= row.ordenPedido %></td>
                        <td><%= row.fechaOrden %></td>
                        <td><%= row.proveedor %></td>
                        <!-- <td><%= row.comprobante %></td>
                        <td><%= row.nombreCorto %></td> -->
                    </tr>
                    <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>
                            
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            <div id="tableString"></div>
           </div> 
        </div>
    </div>
</body>

</html>