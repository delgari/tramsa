<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bitácora</title>
    <link rel="stylesheet" href="css/Consulta/consulta.css" type="text/css" media="all" />
    <%- include ('../partials/head') %>
</head>

<body>

    <div class="wrapper">
        <%- include ('../partials/navegacion') %>
        <!-- Contenido general -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <img src="Imagenes/Logo2.png" width="120" height="50" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Contenedor de la bitacora -->
            <div class="container">

                <h3>Bitácora</h3>
                <br>
                <form>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label type="text" id="lbtUser" style="color: white;"> Usuario </label> &nbsp
                            <input type="text" name="" id="txtUser" placeholder="Usuario" onkeyup="filtrar()">
                        </div>

                        <div class="col-md-4">
                            <label type="text" id="lbtMinDate" style="color: white;"> Desde: </label> &nbsp
                            <input type="date" id="datepicker_from" class="date-range-filter" onchange="filtrar()">
                        </div>

                        <div class="col-md-4">
                            <label type="text" id="lbtMaxDate" style="color: white;"> Hasta: </label> &nbsp
                            <input type="date" id="datepicker_to" class="date-range-filter" onchange="filtrar()">
                        </div>
                    </div>

                </form>
                <br>

               <table class="table table-light table-bordered table-responsive-sm" id="bitacoraTable">
                    <thead>
                        <tr>
                            <th>Codigo Bitacora</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if (Resultado != ''){ %>
                        <% Resultado.forEach(function(row){ %>
                        <tr>
                            <td><%= row.codigoBitacora %></td>
                            <td><%= row.usuario %></td>
                            <td><%= row.fecha %></td>
                            <td><%= row.descripcion %></td>
                        </tr>
                        <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
<script>
    
function filtrar() {
    var input, filter, table, tr, td, i, inputDateMin,inputDateMax;
    input = document.getElementById("txtUser");
    inputDateMin =document.getElementById("datepicker_from");
    inputDateMax= document.getElementById("datepicker_to")
    filter = input.value.toUpperCase();
    filterDateMin= inputDateMin.value;
    filterDateMax= inputDateMax.value;

    table = document.getElementById("bitacoraTable");
    tr = table.getElementsByTagName("tr");
  
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td");
      if(td.length > 0){ 
         if (td[0].innerHTML.toUpperCase().indexOf(filter) > -1 || td[1].innerHTML.toUpperCase().indexOf(filter) > -1)
         {
             var cellDate = td[2].innerHTML;
             if(inputDateMin == null && inputDateMax == null){
                 break;
             } 
             if(inputDateMin == null || cellDate <= inputDateMax){
                tr[i].style.display = "";
             }

             if(inputDateMax == null || cellDate >= inputDateMin){
                tr[i].style.display = "";
             }
             if(cellDate <= inputDateMax && cellDate >= inputDateMin){
                tr[i].style.display = "";
             }     
         } else {
           tr[i].style.display = "none";
         }
      }
   }
  }
</script>